<!DOCTYPE html>
<html>
  <head>
    <title>w√§CH</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%#= Bootstrap %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
    <%#= Font Awesome %>
    <script src="https://kit.fontawesome.com/8755d9a207.js" crossorigin="anonymous"></script>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="bg-light authors <%= controller_name %> <%= action_name %>">
    <% if notice %>
      <p class="notice p-0 mb-0 bg-dark text-light ps-5"><%= notice %></p>
    <% end %>

    <% if alert %>
      <p class="alert p-0 mb-0 bg-danger text-light ps-5"><%= alert %></p>
    <% end %>
    
    <%= yield %>
  </body>
</html>
