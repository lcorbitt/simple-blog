<%= render "shared/nav", sign_in: false, sign_up: true, bottom_border: false %>

<div class="container-fluid pt-5 pb-5" style="background-color: #ffc107; min-height: 100%; height: 200vw; overflow: hidden;">
  <div class="col-md-6 rounded-3" style="margin: 0 auto;">
    <div class="card text-center rounded-3 shadow-lg">
      <div class="card-header p-5 border-bottom-0 rounded-3">
        <h3>Sign in with email</h3>
      </div>
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field form-outline mb-4 col-md-8" style="margin: 0 auto;">
            <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
            <%= f.label :email, class: "form-label mt-3" %><br />
          </div>

          <div class="field form-outline mb-4 col-md-8" style="margin: 0 auto;">
            <%= f.password_field :password, class: "form-control", autocomplete: "current-password" %>
            <%= f.label :password, class: "form-label mt-3 mb-0" %><br />
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field mt-4 mb-3">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>

          <%= f.submit "Sign in", class: "btn btn-outline-dark rounded-pill mb-4" %>
        <% end %>

        <p class="card-text mt-1 mb-2">Don't have an account?</p>
        <%= link_to "Sign Up", new_author_registration_path, class: "text-dark" %>
      </div>
    </div>
  </div>
</div>

