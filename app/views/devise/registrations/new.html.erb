<%= render "shared/nav", sign_in: true, sign_up: false, bottom_border: false %>

<div class="container-fluid pt-5 pb-5" style="background-color: #ffc107;">
  <div class="col-md-6 rounded-3" style="margin: 0 auto;">
    <div class="card text-center rounded-3 shadow-lg">
      <div class="card-header p-5 border-bottom-0 rounded-3">
        <h3>Create account</h3>
      </div>
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="field form-outline mb-4 col-md-8" style="margin: 0 auto;">
            <%= f.text_field :name, class: "form-control", autofocus: true, autocomplete: "name" %>
            <%= f.label :name, class: "form-label mt-3" %><br />
          </div>

          <div class="field form-outline mb-4 col-md-8" style="margin: 0 auto;">
            <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
            <%= f.label :email, class: "form-label mt-3" %><br />
          </div>

            <%
=begin%>
 <div class="field">
              <%= f.label :name %><br />
              <%= f.text_field :name, autofocus: true %>
            </div> 
<%
=end%>

            <div class="field form-outline mb-4 col-md-8" style="margin: 0 auto;">
              <%= f.password_field :password, class: "form-control", autocomplete: "new-password" %>
              <%= f.label :password, class: "form-label mt-3 mb-0" %><br />
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
            </div>

            <div class="field form-outline mb-4 col-md-8" style="margin: 0 auto;">
              <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
              <%= f.label :password_confirmation, class: "form-label mt-3 mb-0" %><br />
            </div>

          <% if devise_mapping.rememberable? %>
            <div class="field mt-4 mb-3">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>

          <%= f.submit "Create Account", class: "btn btn-outline-dark rounded-pill mb-4" %>
        <% end %>

        <p class="card-text mt-1 mb-2">Already have an account?</p>
        <%= link_to "Login", new_author_session_path, class: "text-dark" %>
      </div>
    </div>
  </div>
</div>

