<%= render "shared/nav" %>
<%= render "jumbotron" %>

<div class="container">
  <div class="row">
    <% @posts.each do |post| %>
      <div class="col-md-6 col-lg-4 pt-5 rounded">
        <div class="card post-card">
          <div class="hero-image" style="background-image: url(<%= url_for(post.hero_image) %>)"></div>
          <div class="card-body d-flex flex-column">
            <p class="mb-1"><%= post.author.name %></p>
            <h4 class="card-title"><%= post.title %></h4>
            <p class="card-text text-secondary"><%= truncate(post.description, length: 100) %></p>
            <small class="text-secondary mb-3"><%= post.created_at.strftime("%B %d, %Y") %></small>
            <%= link_to "Read Post", blog_post_path(post), class: "btn btn-outline-dark mt-auto me-auto rounded-pill" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>