<h4 class="d-flex justify-content-between mb-4">
  <span>Posts</span>
  <%= link_to 'New Post', new_post_path, class: "btn btn-primary" %>
</h4>

<div class="row">
  <% @posts.each do |post| %>
    <div class="col-md-6 col-lg-4">
      <div class="card post-card">
        <div class="header-image" style="background-image: url(<%= url_for(post.hero_image) %>)"></div>
        <div class="card-body d-flex flex-column">
          <p class="mb-0"><%= post.author.name %></p>
          <h5 class="card-title"><%= post.title %></h5>
          <p class="card-text text-secondary"><%= truncate(post.description, length: 100) %></p>
          <%= link_to "Read Post", blog_post_path(post), class: "btn btn-primary mt-auto me-auto" %>
        </div>
      </div>
    </div>
  <% end %>
</div>