<%= render "shared/nav", bottom_border: true, sign_in: false, sign_up: false %>
<%= render "jumbotron", post: @post %>


<div class="container">
  <div class="row">
    <div class="col-lg-10 offset-lg-1">
      <div class="card post-card mb-5">
        <div class="hero-image" style="background-image: url(<%= url_for(@post.hero_image) %>)"></div>
        <div class="card-body">
          <div class="pl-5 pr-5 pt-4 pb-4">
            <% @post.elements.each do |element| %>
              <% if element.image? %>
                <div class="image-element mb-5">
                  <%= image_tag(element.image) %>
                </div>
              <% else %>
                <div class="content-element mb-5">
                  <%= element.content %>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>